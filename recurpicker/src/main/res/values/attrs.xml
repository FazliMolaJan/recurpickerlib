<resources>

    <attr name="recurrencePickerStyle" format="reference"/>

    <declare-styleable name="RecurrencePickerView">
        <attr name="rpColorPickerBackground" format="reference|color"/>
        <attr name="rpColorHeaderBackground" format="reference|color"/>

        <!-- List of option list attributes -->
        <attr name="rpOptionListTitleStyle" format="reference"/>
        <attr name="rpOptionItemStyle" format="reference"/>
        <attr name="rpOptionItemSelectedColor" format="reference|color"/>
        <attr name="rpOptionItemUnselectedColor" format="reference|color"/>
        <attr name="rpOptionCheckStyle" format="reference"/>
        <attr name="rpOptionCheckSize" format="dimension"/>

        <!-- List of recurrence creator attributes -->
        <attr name="rpLabelTextAppearance" format="reference"/>
        <attr name="rpPeriodSpinnerStyle" format="reference"/>
        <attr name="rpPeriodSpinnerItemStyle" format="reference"/>
        <attr name="rpPeriodSpinnerDropdownItemStyle" format="reference"/>
        <attr name="rpEndSpinnerStyle" format="reference"/>
        <attr name="rpEndSpinnerItemStyle" format="reference"/>
        <attr name="rpEndSpinnerDropdownItemStyle" format="reference"/>
        <attr name="rpWeekButtonStyle" format="reference"/>
        <attr name="rpCancelButtonStyle" format="reference"/>
        <attr name="rpDoneButtonStyle" format="reference"/>

        <!-- Week button style -->
        <attr name="rpColorWeekButtonChecked" format="reference|color"/>
        <attr name="rpColorWeekButtonUnchecked" format="reference|color"/>
        <attr name="rpColorWeekButtonStroke" format="reference|color"/>
        <attr name="rpColorWeekButtonStrokeWidth" format="dimension"/>
        <attr name="rpColorWeekButtonTextChecked" format="reference|color"/>
        <attr name="rpColorWeekButtonTextUnchecked" format="reference|color"/>
        <attr name="rpWeekButtonSize" format="dimension"/>

        <!-- Strings attributes -->
        <attr name="rpPeriodSpinnerItemsText" format="reference"/>
        <attr name="rpEndSpinnerItemsText" format="reference"/>
        <attr name="rpEndSpinnerItemsTextAbbr" format="reference"/>
        <attr name="rpWeekButtonsText" format="reference"/>
        <attr name="rpOptionListNoneText" format="reference"/>
        <attr name="rpOptionListCustomText" format="reference"/>

    </declare-styleable>

</resources>