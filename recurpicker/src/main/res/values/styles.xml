<?xml version="1.0" encoding="utf-8"?>
<resources>

    <public name="RecurrencePickerStyle" type="style"/>
    <style name="RecurrencePickerStyle">
        <item name="rpColorPickerBackground">@android:color/transparent</item>
        <item name="rpColorHeaderBackground">?android:attr/colorPrimary</item>

        <item name="rpOptionListTitleStyle">@style/RpOptionListTitleStyle</item>
        <item name="rpOptionItemStyle">@style/RpOptionItemStyle</item>
        <item name="rpOptionItemSelectedColor">?android:attr/colorAccent</item>
        <item name="rpOptionItemUnselectedColor">?android:attr/textColorPrimary</item>
        <item name="rpOptionCheckStyle">@style/RpOptionCheckStyle</item>
        <item name="rpOptionCheckSize">25dp</item>

        <item name="rpLabelTextAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="rpPeriodSpinnerStyle">@style/RpPeriodSpinnerStyle</item>
        <item name="rpPeriodSpinnerItemStyle">@style/RpPeriodSpinnerItemStyle</item>
        <item name="rpPeriodSpinnerDropdownItemStyle">@style/RpPeriodSpinnerDropdownItemStyle</item>
        <item name="rpEndSpinnerStyle">@style/RpEndSpinnerStyle</item>
        <item name="rpEndSpinnerItemStyle">@style/RpEndSpinnerItemStyle</item>
        <item name="rpEndSpinnerDropdownItemStyle">@style/RpEndSpinnerItemStyle</item>
        <item name="rpWeekButtonStyle">@style/RpWeekButtonStyle</item>
        <item name="rpCancelButtonStyle">@style/RpCancelButtonStyle</item>
        <item name="rpDoneButtonStyle">@style/RpDoneButtonStyle</item>

        <item name="rpColorWeekButtonChecked">?android:attr/colorAccent</item>
        <item name="rpColorWeekButtonUnchecked">@android:color/transparent</item>
        <item name="rpColorWeekButtonStroke">?android:attr/colorAccent</item>
        <item name="rpColorWeekButtonStrokeWidth">2px</item>
        <item name="rpColorWeekButtonTextChecked">?android:attr/textColorPrimaryInverse</item>
        <item name="rpColorWeekButtonTextUnchecked">?android:attr/textColorPrimary</item>
        <item name="rpWeekButtonSize">50dp</item>

        <item name="rpPeriodSpinnerItemsText">@array/rp_period_spinner_items</item>
        <item name="rpEndSpinnerItemsText">@array/rp_end_spinner_items</item>
        <item name="rpEndSpinnerItemsTextAbbr">@array/rp_end_spinner_items_abbr</item>
        <item name="rpWeekButtonsText">@array/rp_days_of_week_abbr</item>
        <item name="rpOptionListNoneText">@string/rp_option_list_none</item>
        <item name="rpOptionListCustomText">@string/rp_option_list_custom</item>
    </style>

    <public name="RpOptionListTitleStyle" type="style"/>
    <style name="RpOptionListTitleStyle">
        <item name="android:padding">5dp</item>
        <item name="android:text">@string/rp_repeat_options</item>
        <item name="android:textAppearance">?attr/rpLabelTextAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <public name="RpOptionItemStyle" type="style"/>
    <style name="RpOptionItemStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAppearance">?attr/rpLabelTextAppearance</item>
    </style>

    <public name="RpOptionCheckStyle" type="style"/>
    <style name="RpOptionCheckStyle">
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:tint">?attr/rpOptionItemSelectedColor</item>
    </style>

    <public name="RpPeriodSpinnerStyle" type="style"/>
    <style name="RpPeriodSpinnerStyle">
        <item name="android:backgroundTint">?android:attr/textColorSecondaryInverse</item>
    </style>

    <public name="RpEndSpinnerStyle" type="style"/>
    <style name="RpEndSpinnerStyle">
        <!-- Nothing -->
    </style>

    <public name="RpPeriodSpinnerItemStyle" type="style"/>
    <style name="RpPeriodSpinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/rpLabelTextAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <public name="RpPeriodSpinnerDropdownItemStyle" type="style"/>
    <style name="RpPeriodSpinnerDropdownItemStyle" parent="@style/RpPeriodSpinnerItemStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <public name="RpEndSpinnerItemStyle" type="style"/>
    <style name="RpEndSpinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/rpLabelTextAppearance</item>
    </style>

    <public name="RpWeekButtonStyle" type="style"/>
    <style name="RpWeekButtonStyle">
        <item name="android:background">@drawable/bg_week_button</item>
        <item name="android:textColor">@color/color_week_button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <public name="RpCancelButtonStyle" type="style"/>
    <style name="RpCancelButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:text">@string/rp_cancel</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Widget.Button</item>
    </style>

    <public name="RpDoneButtonStyle" type="style"/>
    <style name="RpDoneButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:text">@string/rp_done</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Widget.Button</item>
    </style>

</resources>