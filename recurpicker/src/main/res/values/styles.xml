<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RecurrencePickerStyle">
        <item name="colorPickerBackground">@android:color/transparent</item>
        <item name="colorHeaderBackground">?attr/colorPrimary</item>

        <item name="optionListTitleStyle">@style/RpOptionListTitleStyle</item>
        <item name="optionItemStyle">@style/RpOptionItemStyle</item>
        <item name="optionItemSelectedColor">?attr/colorAccent</item>
        <item name="optionItemUnselectedColor">?android:attr/textColorPrimary</item>
        <item name="optionCheckStyle">@style/RpOptionCheckStyle</item>
        <item name="optionCheckSize">25dp</item>

        <item name="labelTextAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="periodSpinnerStyle">@style/RpPeriodSpinnerStyle</item>
        <item name="periodSpinnerItemStyle">@style/RpPeriodSpinnerItemStyle</item>
        <item name="periodSpinnerDropdownItemStyle">@style/RpPeriodSpinnerDropdownItemStyle</item>
        <item name="endSpinnerStyle">@style/RpEndSpinnerStyle</item>
        <item name="endSpinnerItemStyle">@style/RpEndSpinnerItemStyle</item>
        <item name="endSpinnerDropdownItemStyle">@style/RpEndSpinnerItemStyle</item>
        <item name="weekButtonStyle">@style/RpWeekButtonStyle</item>
        <item name="cancelButtonStyle">@style/RpCancelButtonStyle</item>
        <item name="doneButtonStyle">@style/RpDoneButtonStyle</item>

        <item name="colorWeekButtonChecked">?attr/colorAccent</item>
        <item name="colorWeekButtonUnchecked">@android:color/transparent</item>
        <item name="colorWeekButtonStroke">?attr/colorAccent</item>
        <item name="colorWeekButtonStrokeWidth">2px</item>
        <item name="colorWeekButtonTextChecked">?android:attr/textColorPrimaryInverse</item>
        <item name="colorWeekButtonTextUnchecked">?android:attr/textColorPrimary</item>
        <item name="weekButtonSize">50dp</item>

        <item name="optionListItemsText">@array/option_list_items</item>
        <item name="periodSpinnerItemsText">@array/period_spinner_items</item>
        <item name="endSpinnerItemsText">@array/end_spinner_items</item>
        <item name="endSpinnerItemsTextAbbr">@array/end_spinner_items_abbr</item>
        <item name="weekButtonsText">@array/days_of_week_abbr</item>
    </style>

    <style name="RpOptionListTitleStyle">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:text">@string/repeat_options</item>
        <item name="android:textAppearance">?attr/labelTextAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RpOptionItemStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAppearance">?attr/labelTextAppearance</item>
    </style>

    <style name="RpOptionCheckStyle">
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:tint">?attr/optionItemSelectedColor</item>
    </style>

    <style name="RpPeriodSpinnerStyle">
        <item name="android:backgroundTint">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="RpEndSpinnerStyle">
        <!-- Nothing -->
    </style>

    <style name="RpPeriodSpinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/labelTextAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RpPeriodSpinnerDropdownItemStyle" parent="@style/RpPeriodSpinnerItemStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RpEndSpinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?attr/labelTextAppearance</item>
    </style>

    <style name="RpWeekButtonStyle">
        <item name="android:background">@drawable/bg_week_button</item>
        <item name="android:textColor">@color/color_week_button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="RpCancelButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Widget.Button</item>
    </style>

    <style name="RpDoneButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:text">@string/done</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Widget.Button</item>
    </style>

</resources>