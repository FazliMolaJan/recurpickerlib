<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPickerBackground"
    >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:background="?attr/colorHeaderBackground"
        android:layout_weight="0"
        >
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/optionListTitleStyle"
            android:layout_centerVertical="true"
            />
        <Spinner
            android:id="@+id/spin_recur_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/periodSpinnerStyle"
            android:visibility="gone"
            android:layout_centerVertical="true"
            />
        <Switch
            android:id="@+id/switch_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:checked="true"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <FrameLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- List of default recurrence options -->
            <LinearLayout
                android:id="@+id/option_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/creator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/freq_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    >
                    <TextView
                        android:id="@+id/text_freq_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/edit_freq"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:text="@string/every"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                    <EditText
                        android:id="@+id/edit_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                    <TextView
                        android:id="@+id/text_freq_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                </LinearLayout>

                <!-- Layout for displaying days of week buttons, if week unit selected -->
                <include
                    layout="@layout/week_buttons_layout"
                    />

                <!-- Radios for monthly options -->
                <RadioGroup
                    android:id="@+id/radiogroup_monthly_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:visibility="gone"
                    >
                    <RadioButton
                        android:id="@+id/radio_same_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/repeat_monthly_same_day"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                    <RadioButton
                        android:id="@+id/radio_same_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                    <RadioButton
                        android:id="@+id/radio_last_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/repeat_monthly_last_day"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                </RadioGroup>

                <!-- Input for recurrence end setting -->
                <LinearLayout
                    android:id="@+id/recur_end_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    >
                    <Spinner
                        android:id="@+id/spin_end_type"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        style="?attr/endSpinnerStyle"
                        />
                    <EditText
                        android:id="@+id/edit_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:focusable="false"
                        android:inputType="text"
                        android:foreground="?attr/selectableItemBackground"
                        android:textAppearance="?attr/labelTextAppearance"
                        tools:ignore="TextFields"
                        />
                    <EditText
                        android:id="@+id/edit_end_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                    <TextView
                        android:id="@+id/text_end_value"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:textAppearance="?attr/labelTextAppearance"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <!-- Done button -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0"
        >
        <Button
            android:id="@+id/cancel_btn"
            android:visibility="gone"
            style="?attr/cancelButtonStyle"
            />
        <Button
            android:id="@+id/done_btn"
            android:visibility="gone"
            style="?attr/doneButtonStyle"
            />
    </LinearLayout>

</LinearLayout>
